<h1> List of all articles </h1>

<table>

    <tr>
        <th>Title</th>
        <th>Text</th>
        <th><th>
    </tr>
<% @articles.each do  |article| %>
<tr>
    <td>
        <%= article.title %>
    </td>
    <td>
        <%= truncate(article.text, lenght: "75") %>
    </td>

    <td>
         <%= link_to 'Show', article_path(article) %>
    </td>
    <td>
        <%= link_to 'edit', edit_article_path(article) %>
    </td>
</tr>

<% end %>
</table>
<p> <%= link_to 'Back', welcome_index_path %></p>
